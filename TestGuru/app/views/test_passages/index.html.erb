<p id="notice"><%= notice %></p>

<h1>Test Passages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_passages.each do |test_passage| %>
      <tr>
        <td><%= test_passage.body %></td>
        <td><%= link_to 'Show', test_passage %></td>
        <td><%= link_to 'Edit', edit_test_passage_path(test_passage) %></td>
        <td><%= link_to 'Destroy', test_passage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

